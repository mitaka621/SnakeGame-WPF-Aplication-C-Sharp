<Application x:Class="Snake_Game.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snake_Game"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FF211E2B"></SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor" Color="#321C40"></SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor" Color="#4f4867"></SolidColorBrush>
        <SolidColorBrush x:Key="TextColor" Color="#EBEBEB"></SolidColorBrush>
        <SolidColorBrush x:Key="OverlayCOloor" Color="#7F000000"></SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/UIElements/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
